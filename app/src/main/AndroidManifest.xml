<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.withub">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.example.withub.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WITHUB">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name=".FindIdActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name=".FindPwActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>


        <activity android:name=".FriendActivity"/>
        <activity android:name=".DrawerActivity"/>
    </application>

</manifest>