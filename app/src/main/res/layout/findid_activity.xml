<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    xmlns:float="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12">

        <Button
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start|center"
            android:background="@drawable/ic_orange_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="아이디 찾기"
            android:fontFamily="@font/nanum_square_round_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.88"
        android:weightSum="1"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:id="@+id/floatLabeledEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        float:fletPadding="5dp"
                        tools:ignore="MissingClass,MissingConstraints">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:theme="@style/editText"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:hint="이메일" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:dropDownWidth="100dp"
                            android:spinnerMode="dropdown"
                            android:backgroundTint="@color/point_color"
                            android:popupBackground="@color/gray"/>  //스피너 팝업 컬러

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:text="인증하기"
                            android:background="@drawable/stroke_btn"/>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

            </LinearLayout>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        float:fletPadding="5dp"
                        tools:ignore="MissingClass,MissingConstraints">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:theme="@style/editText"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:hint="인증번호" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="right|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textAlignment="gravity"
                            android:layout_gravity="bottom"
                            android:text="5 : 00"
                            android:textSize="20sp"
                            android:textColor="@color/timer"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:text="확인"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:background="@drawable/stroke_btn"/>

                    </LinearLayout>

                </FrameLayout>

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="0.05"
                     android:layout_height="match_parent"/>

             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=" 회원님의 아이디"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:textColor="@color/black"/>

                    <EditText
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="코딩문딩"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:backgroundTint="@color/gray"
                        android:editable="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>